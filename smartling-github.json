{
    "locales" : [
        {
            "smartling"   : "zh-CN",
            "application" : "simplified"
        },
        {
            "smartling"   : "zh-TW",
            "application" : "traditional"
        }
    ],
    "resourcesSets": [
        {
            "pathRegex"                 : "/web/messages/(?!(en|zh)).*\\.properties",
            "type"                      : "javaProperties"
        },
        {
            "pathRegex"                 : "/web/messages/en/(?<path>.*)\\.properties",
            "translationPathExpression" : "/web/messages/zh/${path}_${locale}.${originalFile.extension}",
            "translationCommitMessage"  : "Task TRN-18 translate ${originalFile.name} to ${locale}\n${translatedFile.fullName}",
            "type"                      : "javaProperties",
            "authorizeContent"          : true
        }
    ]
}
