{
    "resourcesSets": [
        {
            "pathRegex"                 : "/web/messages/(?!en).*\\.properties",
            "type"                      : "javaProperties"
        },
        {
            "pathRegex"                 : "/web/messages/en/(?<path>.*)\\.properties",
            "translationPathExpression" : "/web/messages/#{#locale.language}/#{#path}_#{#locale.country.toLoverCase()}.#{#originalFile.extension}",
            "type"                      : "javaProperties",
            "authorizeContent"          : true
        }
    ]
}
